<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navbar') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Blogosphere Connection</h1>
            <span class="subheading">A Blog Web Site</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

        <% blogs.forEach(blog => { %>
        <div class="post-preview">
          <a href="/posts/<%= blog._id %>">
            <h2 class="post-title">
              <%= blog.title %>
            </h2>
            <h3 class="post-subtitle">
              <%= blog.detail %>
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="#"><%= blog.author %></a>
            <%= new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric' }).format(blog.dateCreated) %> 
            <% if (blog.edited) { %>
              <span class="edited">Edited</span>
              <% } %>
          </p>


          <!-- Update and Delete Buttons -->
        <div class="mt-4">
          <a href="/posts/update/<%= blog._id %>" class="btn btn-primary mr-2">
            <i class="fas fa-edit"></i> Update
          </a>
          <a onclick="return confirm(`Are you sure to delete <%= blog.title.toUpperCase() %>?`)" href="/posts/<%= blog._id %>?_method=DELETE" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Delete
          </a>
          <a href="/posts/like/<%= blog._id %>" class="btn btn-secondary">
            <i class="fas fa-thumbs-up"></i> <%= blog.like %> Likes
          </a>
        </div>

        
        </div>
        <% }) %>
        

        <hr>
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
